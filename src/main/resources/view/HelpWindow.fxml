<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.stage.Stage?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.StackPane?>
<fx:root resizable="false" title="Help" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/23.0.1"
         xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@HelpWindow.css" />
      </stylesheets>
      <VBox fx:id="helpMessageContainer">
        <StackPane>
          <HBox fx:id="moreInfoContainer" alignment="CENTER">
            <children>
              <Label fx:id="helpMessage" text="Label" alignment="CENTER">
                <HBox.margin>
                  <Insets right="5.0" />
                </HBox.margin>
              </Label>
              <Button fx:id="copyButton" mnemonicParsing="false" onAction="#copyUrl" text="Copy URL" alignment="CENTER">
                <HBox.margin>
                  <Insets left="5.0" />
                </HBox.margin>
              </Button>
            </children>
            <opaqueInsets>
              <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
            </opaqueInsets>
            <padding>
              <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
            </padding>
          </HBox>
        </StackPane>
        <StackPane fx:id="addHelpContainer" VBox.vgrow="NEVER">
          <Label fx:id="addHelp"></Label>
          <padding>
            <Insets top="5" right="10" bottom="5" left="10" />
          </padding>
        </StackPane>
        <StackPane fx:id="listHelpContainer" VBox.vgrow="NEVER" alignment="CENTER_LEFT">
          <Label fx:id="listHelp" alignment="CENTER_LEFT"></Label>
          <padding>
            <Insets top="5" right="10" bottom="5" left="10" />
          </padding>
        </StackPane>
        <StackPane fx:id="editHelpContainer" VBox.vgrow="NEVER" alignment="CENTER_LEFT">
          <Label fx:id="editHelp"></Label>
          <padding>
            <Insets top="5" right="10" bottom="5" left="10" />
          </padding>
        </StackPane>
        <StackPane fx:id="deleteHelpContainer" VBox.vgrow="NEVER" alignment="CENTER_LEFT">
          <Label fx:id="deleteHelp"></Label>
          <padding>
            <Insets top="5" right="10" bottom="5" left="10" />
          </padding>
        </StackPane>
        <StackPane fx:id="clearHelpContainer" VBox.vgrow="NEVER" alignment="CENTER_LEFT">
          <Label fx:id="clearHelp"></Label>
          <padding>
            <Insets top="5" right="10" bottom="5" left="10" />
          </padding>
        </StackPane>
        <StackPane fx:id="findNameHelpContainer" VBox.vgrow="NEVER" alignment="CENTER_LEFT">
          <Label fx:id="findNameHelp"></Label>
          <padding>
            <Insets top="5" right="10" bottom="5" left="10" />
          </padding>
        </StackPane>
        <StackPane fx:id="findPhoneHelpContainer" VBox.vgrow="NEVER" alignment="CENTER_LEFT">
          <Label fx:id="findPhoneHelp"></Label>
          <padding>
            <Insets top="5" right="10" bottom="5" left="10" />
          </padding>
        </StackPane>
        <StackPane fx:id="findAddressHelpContainer" VBox.vgrow="NEVER" alignment="CENTER_LEFT" >
          <Label fx:id="findAddressHelp"></Label>
          <padding>
            <Insets top="5" right="10" bottom="5" left="10" />
          </padding>
        </StackPane>
        <StackPane fx:id="findClientTypeHelpContainer" VBox.vgrow="NEVER" alignment="CENTER_LEFT">
          <Label fx:id="findClientTypeHelp" ></Label>
          <padding>
            <Insets top="5" right="10" bottom="5" left="10" />
          </padding>
        </StackPane>
        <StackPane fx:id="sortHelpContainer" VBox.vgrow="NEVER" alignment="CENTER_LEFT">
          <Label fx:id="sortHelp"></Label>
          <padding>
            <Insets top="5" right="10" bottom="5" left="10" />
          </padding>
        </StackPane>
        <StackPane fx:id="viewHelpContainer" VBox.vgrow="NEVER" alignment="CENTER_LEFT">
          <Label fx:id="viewHelp"></Label>
          <padding>
            <Insets top="5" right="10" bottom="5" left="10" />
          </padding>
        </StackPane>
        <StackPane fx:id="exitHelpContainer" VBox.vgrow="NEVER" alignment="CENTER_LEFT">
          <Label fx:id="exitHelp"></Label>
          <padding>
            <Insets top="5" right="10" bottom="5" left="10" />
          </padding>
        </StackPane>
      </VBox>
    </Scene>
  </scene>
</fx:root>
